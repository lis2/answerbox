.well.well-small{:"data-question" => @question.id}
  .media
    .pull-left
      %img.media-object.small{:src => @question.user.avatar.url}
    .media-body
      %h4.media-heading
        %a{:href => question_path(@question)}= @question.title
      %p= @question.body.html_safe
- unless @question.answered?
  #answer-form
    = render partial: "answer_form"
#answers.all_answers

  = render partial: "answer", collection: @question.answers
