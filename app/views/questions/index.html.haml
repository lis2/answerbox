.container-fluid{:style => "max-width: 900px; margin: 0 auto;"}
  .ui-widget
    = label_tag "tags"
    = text_field_tag "tags"
  #questions 
    = render partial: "question", collection: @questions
  .row-fluid
    .span12
      .row-fluid
      .row-fluid
        - if @questions.length > 0
          .well{:style => " margin: 0 auto 10px;"}
            %button.btn.btn-large.btn-block{:type => "button"} Load more questions
        - else
          %h1 No questions so far.
